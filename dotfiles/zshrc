#--------------------------------------------------------------------------------
# VirtualBox
#--------------------------------------------------------------------------------

alias vbm='VBoxManage $*'

#--------------------------------------------------------------------------------
# Local overrides
#--------------------------------------------------------------------------------

if [[ -e ~/.zshrc_amazon ]]; then
    source ~/.zshrc_amazon
fi

if [[ -e ~/.zshrc_local ]]; then
    source ~/.zshrc_local
fi

if [[ -e ~/.zshrc_private ]]; then
    source ~/.zshrc_private
fi

if [[ -e ~/.zshrc_home ]]; then
    source ~/.zshrc_home
fi

#--------------------------------------------------------------------------------
# Path
#--------------------------------------------------------------------------------

# Add to path
PATH=~/bin:$PATH
path+=~/scripts

# Remove any entries that don't exist
# http://stackoverflow.com/questions/9347478/how-to-edit-path-variable-in-zsh
path=($^path(N))

#--------------------------------------------------------------------------------
# Finale
#--------------------------------------------------------------------------------

# Start @ home
cd

